@model IEnumerable<ConquestionGame.Presentation.WebClient.ConquestionServiceReference.Game>

@{
    ViewBag.Title = "DisplayActiveGames";
}

<h2>Join an active game</h2>

<p>
    @Html.ActionLink("Create New Game", "CreateGame")
</p>

<div>
    <h4>Game Name</h4>
    @if (Model.Count() == 0)
    {
        <p>There are no active games.</p>
    }
    <ul>
        @{
            foreach (var item in Model)
            {
                <li>@item.Name</li>
                @Html.ActionLink("Join Game", "JoinGame", new { name = @item.Name })
            }
        }
    </ul>
</div>

